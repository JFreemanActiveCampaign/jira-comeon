{
    "manifest_version": 2,
    "icons": {
        "128": "images/icon.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "options_page": "html/options.html",
    "devtools_page": "html/devtools.html",
    "permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "js/*",
        "html/*",
        "css/*",
        "images/*"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "author": "Kidon Chu (kchu@activecampaign.com)",
    "name": "jira project",
    "version": "0.1.0",
    "description": "haha"
}
